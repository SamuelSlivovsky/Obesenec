<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.uniza.fri.slivovsky.semestralnapraca"

    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SemestralnaPraca.NoActionBar"
        android:requestLegacyExternalStorage="true"
        android:fullBackupOnly="true"
        >
        <activity
            android:name=".title.TitleActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".playerHistory.HistoryPlayersActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".game.EndActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".game.MenuActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".game.GameActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".game.TutorialActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".score.ScoreActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>